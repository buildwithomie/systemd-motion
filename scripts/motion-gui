#!/usr/bin/env bash

# Systemd Motion GUI Launcher
# This script launches the motion GUI application

# Find the motion installation
MOTION_DIR="$HOME/.local/share/systemd-motion"

if [ ! -d "$MOTION_DIR" ]; then
    echo "Systemd Motion is not installed. Please run the installer first."
    echo "Run: bash install.sh"
    exit 1
fi

# Check if virtual environment exists
if [ ! -f "$MOTION_DIR/.venv/bin/python" ]; then
    echo "Systemd Motion virtual environment not found. Please reinstall."
    echo "Run: bash install.sh"
    exit 1
fi

# Launch the GUI
exec "$MOTION_DIR/.venv/bin/python" -m motion.desktop_app "$@"